{
  "info": {
    "name": "Calculator API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Addition",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{apiKey}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/calculator/add",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calculator", "add"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n\t\"a\": 5,\n\t\"b\": 3\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has correct result', function() {",
              "    const response = pm.response.json();",
              "    pm.expect(response.result).to.equal(8);",
              "});",
              "",
              "pm.test('Invalid input returns 400', function() {",
              "    const echoPostRequest = {",
              "        url: pm.request.url.toString(),",
              "        method: 'POST',",
              "        header: {",
              "            'x-api-key': pm.variables.get('apiKey'),",
              "            'Content-Type': 'application/json'",
              "        },",
              "        body: {",
              "            mode: 'raw',",
              "            raw: JSON.stringify({ a: 'invalid', b: 3 })",
              "        }",
              "    };",
              "    pm.sendRequest(echoPostRequest, function (err, res) {",
              "        pm.expect(res.code).to.equal(400);",
              "        pm.expect(res.json().error).to.equal('Invalid input');",
              "    });",
              "});"
            ]
          }
        }
      ]
    },
